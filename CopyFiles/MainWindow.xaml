<Window x:Class="CopyFiles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CopyFiles"
        mc:Ignorable="d"
        FontSize="14"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="500" Width="1050" Loaded="Window_Loaded" Closing="Window_Closing">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Top">
            <StackPanel.Resources>
                <BooleanToVisibilityConverter x:Key="BoolToVis"/>
                <Style TargetType="Label">
                    <Setter Property ="HorizontalAlignment" Value="Center"></Setter>
                    <Setter Property ="VerticalAlignment" Value="Center"></Setter>
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="MinWidth" Value="800" ></Setter>
                    <Setter Property="MaxWidth" Value="800" ></Setter>
                    <Setter Property="Height" Value="30"></Setter>
                    <Setter Property ="HorizontalAlignment" Value="Center"></Setter>
                    <Setter Property ="VerticalAlignment" Value="Center"></Setter>
                </Style>
                <Style TargetType="Button">
                    <Setter Property="MinWidth" Value="100"></Setter>
                    <Setter Property="Height" Value="30"></Setter>
                    <Setter Property ="HorizontalAlignment" Value="Center"></Setter>
                    <Setter Property ="VerticalAlignment" Value="Center"></Setter>
                    <Setter Property ="HorizontalContentAlignment" Value="Center"></Setter>
                    <Setter Property ="VerticalContentAlignment" Value="Center"></Setter>
                </Style>
            </StackPanel.Resources>

            <StackPanel  Margin="5"  Orientation="Vertical">
                <Label Content="输入文件所在文件夹 " HorizontalAlignment="Left" VerticalAlignment="Center"
                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="txtInput" PreviewTextInput="txtInput_PreviewTextInput"   ></TextBox>
                    <Button  x:Name="btnInputSelet" Content="选择文件夹" Margin="5" Click="btnInput_Click" HorizontalAlignment="Right"/>
                    <CheckBox x:Name="cbx_EnableSubDir" Content="启用子目录" VerticalAlignment="Center"></CheckBox>
                </StackPanel>
            </StackPanel>
            <!--//这里是一个StackPanel，用来放置两个CheckBox，当cbx_EnableSubDir被选中时，这个StackPanel才会显示-->
            <StackPanel Orientation="Horizontal"   Visibility="{Binding IsChecked, ElementName=cbx_EnableSubDir, Converter={StaticResource BoolToVis}}" >
                <!--这是个站位控件,为了和别的控件对齐-->
                <Label Content="输入文件所在文件夹    " Visibility="Hidden"  ></Label>
                <RadioButton x:Name="rb_UseNewFile" Content="使用较新的文件" VerticalAlignment="Center" IsChecked="True" GroupName="CopyCriteria"></RadioButton>
                <RadioButton x:Name="rb_UseOldFile" Content="使用较旧的文件" VerticalAlignment="Center" GroupName="CopyCriteria"></RadioButton>
            </StackPanel>

            <StackPanel Margin="5" Orientation="Vertical">
                <Label Content="输入要复制到的文件夹 " HorizontalAlignment="Left" VerticalAlignment="Center"
                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="txtOutFolder" ></TextBox>
                    <Button  x:Name="btnOutputSelect" Content="选择文件夹" Margin="5" Click="btnOutputSelect_Click" HorizontalAlignment="Right"/>
                </StackPanel>
            </StackPanel>
            <!--<StackPanel Orientation="Horizontal"   Visibility="{Binding IsChecked, ElementName=cbx_EnableSubDir, Converter={StaticResource BoolToVis}}" >
                -->
            <!--这是个站位控件,为了和别的控件对齐-->
            <!--
                <Label Content="输入文件所在文件夹    " Visibility="Hidden"  ></Label>
                <RadioButton x:Name="rb_UseNewFile" Content="使用较新的文件" VerticalAlignment="Center" IsChecked="True" GroupName="CopyCriteria"></RadioButton>
                <RadioButton x:Name="rb_UseOldFile" Content="使用较旧的文件" VerticalAlignment="Center" GroupName="CopyCriteria"></RadioButton>
            </StackPanel>-->

            <StackPanel  Margin="5"   Orientation="Vertical">
                <Label Content="输入要复制的文件名称 " HorizontalAlignment="Left" VerticalAlignment="Top"
                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>
                <StackPanel Orientation="Horizontal">


                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBox x:Name="txtInputFileNames"  AcceptsReturn="True" AcceptsTab="True"  Height="150" TextChanged="txtInputFileNames_TextChanged"></TextBox>
                    </ScrollViewer>
                    <Button  x:Name="btnCopy" Content="开始拷贝文件" Margin="5,0" Click="btnCopy_Click" VerticalAlignment="Top" HorizontalAlignment="Right"/>
                    <CheckBox x:Name="cbx_EnableWildcard" Margin="0,6" Content="启用通配符"  VerticalAlignment="Top" HorizontalAlignment="Right"></CheckBox>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <GroupBox Header="输出" DockPanel.Dock="Bottom"  Width="Auto" >
            <ScrollViewer  VerticalScrollBarVisibility="Auto">
                <TextBox   AcceptsReturn="True" AcceptsTab="True"   x:Name="txtOutput"  ></TextBox>
            </ScrollViewer>
        </GroupBox>
    </DockPanel>

</Window>
